<div>
  <h1>Startup Weekend Team Tracker App</h1>
</div>

<hr>

<div>
  <h3>List of signed up teams: </h3>
</div>


<div class="row">
  <ul>
    <% @teams.each() do |team| %>
      <div class="col-sm-3 col-md-3">
        <div class="thumbnail">
          <img src="<%=team.logo()%>" alt="team_logo">
          <div class="caption">
            <h3><%=team.name()%></h3>
            <p><a href="/teams/<%=team.id()%>" class="btn btn-primary" role="button">Team Member details</a></p>
          </div>
        </div>
      </div>
    <%end%>
  </ul>
</div>

<div>
  <p><a href="/teams/new" class="btn btn-success">Add a New Team</a></p>
</div>
