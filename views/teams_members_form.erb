<h3>Add a new member to <%=@team.name()%></h3>

<form action="/member" method="post">

  <input id="team_id" type="hidden" name="team_id"
          value="<%= @team.id()%>" class"form-control">


  <div class="form-group">
    <label for="name">Member name:</label>
    <input id="name" name="name" type="text" class="form-control">
  </div>

  <div class="form-group">
    <label for="mobile">Mobile:</label>
    <input id="mobile" name="mobile" type="number" class="form-control">
  </div>

  <div class="form-group">
    <label for="email">Email address:</label>
    <input id="email" name="email" type="text" class="form-control">
  </div>

  <div class="form-group">
    <label for="photo">Photo url:</label>
    <input id="photo" name="photo" type="text" class="form-control">
  </div>

  <div>
    <button type="submit" class="btn btn-success">Add Member</button>
  </div>

</form>
